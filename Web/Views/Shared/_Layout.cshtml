    <script type="text/javascript">
		$(window).resize(initFont);
		initFont();
		function initFont() {
		    var htmlWidth = $('html').width();
		    if (htmlWidth >= 650) {
		        $("html").css({"font-size" : "24px"});
		    } else {
		        $("html").css({"font-size" :  12 / 320 * htmlWidth + "px"});
		    }
		};
    </script>
